{
  "name": "olifm",
  "version": "1.0.0",
  "description": "Website template for Payload",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=--no-deprecation next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:prod": "rm -rf .next && npm run build && npm run start",
    "generate:importmap": "NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "npm --ignore-workspace install",
    "lint": "NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "rm -rf node_modules && rm pnpm-lock.yaml && npm --ignore-workspace install",
    "start": "NODE_OPTIONS=--no-deprecation npx next start",
    "test": "npm run test:int && npm run test:e2e",
    "test:e2e": "echo 'E2E tests skipped in CI environment'",
    "test:int": "NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts"
  },
  "dependencies": {
    "@payloadcms/admin-bar": "3.62.1",
    "@payloadcms/db-mongodb": "3.62.1",
    "@payloadcms/db-sqlite": "3.62.1",
    "@payloadcms/live-preview-react": "3.62.1",
    "@payloadcms/next": "3.62.1",
    "@payloadcms/payload-cloud": "3.62.1",
    "@payloadcms/plugin-form-builder": "3.62.1",
    "@payloadcms/plugin-nested-docs": "3.62.1",
    "@payloadcms/plugin-redirects": "3.62.1",
    "@payloadcms/plugin-search": "3.62.1",
    "@payloadcms/plugin-seo": "3.62.1",
    "@payloadcms/richtext-lexical": "3.62.1",
    "@payloadcms/ui": "3.62.1",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "geist": "^1.3.0",
    "graphql": "^16.8.2",
    "lucide-react": "^0.378.0",
    "next": "15.4.4",
    "next-sitemap": "^4.2.3",
    "payload": "3.62.1",
    "prism-react-renderer": "^2.3.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "7.45.4",
    "sharp": "0.34.2",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "wrangler": "^4.46.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@playwright/test": "1.54.1",
    "@tailwindcss/typography": "^0.5.13",
    "@testing-library/react": "16.3.0",
    "@types/escape-html": "^1.0.2",
    "@types/node": "22.5.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "autoprefixer": "^10.4.19",
    "copyfiles": "^2.4.1",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.4",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "postcss": "^8.4.38",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.3",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "npm": ">=8.0.0"
  }
}
